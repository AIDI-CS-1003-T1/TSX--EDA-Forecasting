{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "The template used to create an ECS Service from the ECS Console.",
    "Parameters": {
      "ECSClusterName": {
        "Type": "String",
        "Default": "ai-capstone"
      },
      "ECSServiceName": {
        "Type": "String",
        "Default": "panelappservice"
      },
      "SecurityGroupIDs": {
        "Type": "CommaDelimitedList",
        "Default": "sg-0c4d8baa1057ebbbe"
      },
      "SubnetIDs": {
        "Type": "CommaDelimitedList",
        "Default": "subnet-004fa7775bffe932c,subnet-0265d324c2383b159,subnet-023d05a4b735f90db,subnet-040f87f624f4542ea,subnet-0eb401095ad57df08,subnet-0076623dc85c71546"
      },
      "VpcID": {
        "Type": "String",
        "Default": "vpc-01da2eeee72fca6df"
      },
      "LoadBalancerName": {
        "Type": "String",
        "Default": ""
      }
    },
    "Resources": {
      "ECSService": {
        "Type": "AWS::ECS::Service",
        "Properties": {
          "Cluster": "ai-capstone",
          "CapacityProviderStrategy": [
            {
              "CapacityProvider": "FARGATE",
              "Base": 0,
              "Weight": 1
            }
          ],
          "TaskDefinition": "arn:aws:ecs:us-east-1:436788970190:task-definition/aicapstone-taskdefination:3",
          "ServiceName": "panelappservice",
          "SchedulingStrategy": "REPLICA",
          "DesiredCount": 1,
          "AvailabilityZoneRebalancing": "ENABLED",
          "NetworkConfiguration": {
            "AwsvpcConfiguration": {
              "AssignPublicIp": "ENABLED",
              "SecurityGroups": {
                "Ref": "SecurityGroupIDs"
              },
              "Subnets": {
                "Ref": "SubnetIDs"
              }
            }
          },
          "PlatformVersion": "LATEST",
          "DeploymentConfiguration": {
            "MaximumPercent": 200,
            "MinimumHealthyPercent": 100,
            "DeploymentCircuitBreaker": {
              "Enable": true,
              "Rollback": true
            }
          },
          "DeploymentController": {
            "Type": "ECS"
          },
          "ServiceConnectConfiguration": {
            "Enabled": false
          },
          "Tags": [],
          "EnableECSManagedTags": true
        }
      }
    },
    "Outputs": {
      "ClusterName": {
        "Description": "The cluster used to create the service.",
        "Value": {
          "Ref": "ECSClusterName"
        }
      },
      "ECSService": {
        "Description": "The created service.",
        "Value": {
          "Ref": "ECSService"
        }
      }
    }
  }